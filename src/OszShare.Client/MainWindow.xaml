<Window x:Class="PuushShare.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Osz Share"
        Width="920"
        Height="620"
        MinWidth="760"
        MinHeight="520"
        WindowStartupLocation="CenterScreen"
        Background="#0E111A"
        FontFamily="Bahnschrift">
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0E111A" />
        <SolidColorBrush x:Key="CardBrush" Color="#182033" />
        <SolidColorBrush x:Key="CardBorderBrush" Color="#2E3A57" />
        <SolidColorBrush x:Key="AccentBrush" Color="#2EC4B6" />
        <SolidColorBrush x:Key="AccentPressedBrush" Color="#23A296" />
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F4F7FF" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A7B3CF" />
        <SolidColorBrush x:Key="FieldBrush" Color="#11192B" />
        <SolidColorBrush x:Key="FieldBorderBrush" Color="#334469" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="18" />
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="FieldTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource FieldBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource FieldBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Padding" Value="10,7" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="FieldComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource FieldBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource FieldBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ExpiryComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource FieldComboBoxStyle}">
            <Setter Property="Background" Value="#F3F4F6" />
            <Setter Property="Foreground" Value="#101828" />
            <Setter Property="BorderBrush" Value="#98A2B3" />
        </Style>

        <Style x:Key="ExpiryComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="Background" Value="{StaticResource FieldBrush}" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#253657" />
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                    <Setter Property="Foreground" Value="#052A27" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#052A27" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="18,10" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root"
                                        Property="Background"
                                        Value="{StaticResource AccentPressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root"
                                        Property="Opacity"
                                        Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{StaticResource FieldBorderBrush}" />
            <Setter Property="Background" Value="#15223A" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root"
                                        Property="Opacity"
                                        Value="0.78" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root"
                                        Property="Opacity"
                                        Value="0.45" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Margin="0"
                Padding="24,18"
                Background="#0A1528"
                BorderBrush="#1D355B"
                BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel>
                    <TextBlock Text="Osz Share"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="30"
                               FontWeight="Bold" />
                    <TextBlock Text="osu! beatmap temporary share program"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="14"
                               Margin="0,2,0,0" />
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="24,22,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320" />
                            <ColumnDefinition Width="18" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Height="190"
                                CornerRadius="12"
                                ClipToBounds="True"
                                BorderBrush="{StaticResource FieldBorderBrush}"
                                BorderThickness="1"
                                Background="#11192B">
                            <Grid>
                                <Image x:Name="BeatmapBackgroundImage"
                                       Stretch="UniformToFill" />
                                <Border Background="#55000000" />
                                <TextBlock x:Name="BeatmapBackgroundFallbackTextBlock"
                                           Text="No background image"
                                           Foreground="#D3DEFF"
                                           FontWeight="SemiBold"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Border>

                        <StackPanel Grid.Column="2">
                            <TextBlock Style="{StaticResource LabelStyle}" Text="CURRENT DETECTED BEATMAP" />

                            <TextBlock x:Name="DetectedArtistTextBlock"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Margin="0,8,0,0"
                                       Text="Artist" />

                            <TextBlock x:Name="DetectedTitleTextBlock"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"
                                       Text="Title" />

                            <TextBlock x:Name="DetectedDifficultyTextBlock"
                                       Foreground="#B9C8EA"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Margin="0,8,0,0"
                                       Text="[Difficulty]" />

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Padding="8,6"
                                        CornerRadius="10"
                                        Background="#121F36"
                                        BorderBrush="{StaticResource FieldBorderBrush}"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource LabelStyle}" Text="HP" />
                                        <TextBlock x:Name="HpValueTextBlock"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Text="-" />
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2"
                                        Padding="8,6"
                                        CornerRadius="10"
                                        Background="#121F36"
                                        BorderBrush="{StaticResource FieldBorderBrush}"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource LabelStyle}" Text="OD" />
                                        <TextBlock x:Name="OdValueTextBlock"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Text="-" />
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="4"
                                        Padding="8,6"
                                        CornerRadius="10"
                                        Background="#121F36"
                                        BorderBrush="{StaticResource FieldBorderBrush}"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource LabelStyle}" Text="SR" />
                                        <TextBlock x:Name="SrValueTextBlock"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Text="-" />
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <TextBlock x:Name="DetectedBeatmapUpdatedAtTextBlock"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,10,0,0"
                                       Text="Last checked: -" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="18" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="14" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Style="{StaticResource LabelStyle}"
                                       Text="EXPIRES IN" />

                            <ComboBox x:Name="ExpiryComboBox"
                                      Grid.Column="2"
                                      Height="36"
                                      VerticalContentAlignment="Center"
                                      ItemContainerStyle="{StaticResource ExpiryComboBoxItemStyle}"
                                      Style="{StaticResource ExpiryComboBoxStyle}" />

                            <Button x:Name="UploadButton"
                                    Grid.Column="4"
                                    Width="220"
                                    Height="44"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Content="Upload Current Beatmap"
                                    Click="UploadButton_Click" />
                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="130" />
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="LinkTextBox"
                                     Grid.Column="0"
                                     Style="{StaticResource FieldTextBoxStyle}"
                                     IsReadOnly="True"
                                     TextWrapping="Wrap"
                                     VerticalContentAlignment="Center" />

                            <Button x:Name="CopyButton"
                                    Grid.Column="2"
                                    Height="40"
                                    IsEnabled="False"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Content="Copy Link"
                                    Click="CopyButton_Click" />
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="4"
                        Style="{StaticResource CardStyle}"
                        Background="#17253D">
                    <StackPanel>
                        <TextBlock Style="{StaticResource LabelStyle}" Text="STATUS" />
                        <TextBlock x:Name="StatusTextBlock"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"
                                   Text="Ready." />
                    </StackPanel>
                </Border>

                <TextBlock Grid.Row="6"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="11"
                           HorizontalAlignment="Right"
                           Text="Use the upload button to generate a shareable link." />
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
